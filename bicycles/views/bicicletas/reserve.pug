extends ../layout

block content 
    h1 Listado de bicicletas
    table.table 
        thead  
            tr 
                th ID
                th Color
                th Modelo
                th Ubicacion
                th
        tbody 
            each bici in bicis
                tr
                    td=bici.code
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion
                    td 
                        form.inline(method='post' action='/bicicletas/reservar')
                            //- Bici ID
                            input(type='hidden' name='code' value= bici.code)
                            //- User ID
                            input(type='hidden' name='uid' value= uid)

                            button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                                = 'Reservar'

    h1 Reservas
    if reservas 
        table.table 
            thead  
                tr 
                    th Desde
                    th Hasta
                    th User
                    th Bici
            tbody 
                each reserva in reservas
                    tr
                        td=reserva.desde
                        td=reserva.hasta
                        td=reserva.usuario
                        td=reserva.bicicleta
    a(href='/home') Home
